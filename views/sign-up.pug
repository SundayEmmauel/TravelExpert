extends layout

block content

  //-------------------------------- Background image

  .p-5.text-center.bg-image(style="\
    background-image: url('images/beach003.jpg');\
    height: 400px;\
    ")
    .mask(style='background-color: rgba(0, 0, 0, 0.2);')
      .d-flex.justify-content-center.align-items-center.h-100
        .text-white
          h2.mb-3
            | &quot;-Welcome to Travel ExperT4-&quot;
            h1.mb-3.display-1 Please Register here
            a.btn.btn-outline-light.btn-lg(href='packages' role='button') Vacation Packages


  //----------------- Registration form-------------
  .body1.container-fluid
    br
    .regform
      h1.display-5.text-primary User Registration form
    .main
      br
      p
      form(method='POST' action='/register')
        .form1.row.g-3 
          if errors
            ul
              each error in errors
                li.alert.alert-danger.m3= error
                
          .col-md-6 
            label.form-label.text-light(for='inputUsername4') User Name
            input#inputUsername4.form-control(type='text' placeholder='Create a Username' name="username")
          .col-md-6  
            label.form-label.text-light(for='inputPassword4') Password
            input#inputPassword4.form-control(type='password' placeholder='Your Password' name="password")
          .col-md-6 
            label.form-label.text-light(for='') First name
            input#inputfname4.form-control(type='text' placeholder='Your First Name' name="fname")
          .col-md-6 
            label.form-label.text-light(for='inputPassword4') Last Name
            input#inputlname4.form-control(type='text' placeholder='Your Family Name' name="lname")
          .col-md-12 
            label.form-label.text-light(for='inputEmail4') Email
            input#inputEmail4.form-control(type='email' placeholder='Your Email' name="email")
          .col-12
            label.form-label.text-light(for='inputAddress') Address
            input#inputAddress.form-control(type='text' placeholder='' name="address1")
          .col-12
            label.form-label.text-light(for='inputAddress2') Address 2
            input#inputAddress2.form-control(type='text' placeholder='' name="address2")
          .col-md-2
            label.form-label.text-light(for='inputZip') Zip
            input#inputZip.form-control(type='text' placeholder='A1A 1B1' pattern='[a-zA-Z][0-9][a-zA-Z] [0-9][a-zA-Z][0-9]' name="zcode")
          .col-12
            .form-check
              input#gridCheck.form-check-input(type='checkbox' name="newsletter")
              label.form-check-label.text-light(for='gridCheck')
                | Subscrib to newsletter
            .col-12     
            button.col-12.btn.btn-primary(type='submit') Register  
            p
            button.col-12.btn.btn-primary(type='reset') Reset 

          .col-12
            p.h4.text-light Do you have an account already?
            a.bg-light.btn-lg(href="/register/login") Login Here
            
    br
